ktor {
    deployment {
        port = 80
    }
    application {
        modules = [
            com.portalsoup.saas.core.ktor.modules.RootMainKt.root,
            com.portalsoup.saas.core.ktor.modules.DiscordMainKt.discord,
            com.portalsoup.saas.core.ktor.modules.ApiMainKt.api
        ]
    }
}

jdbc {
    url = "jdbc:postgresql://{{host}}:{{port}}/{{db}}?sslmode=require"
    driver = "{{driver}}"
    username = "{{username}}"
    password = "{{password}}"
    maxPool = "{{maxPool}}"
}

discord {
    token = "{{discordToken}}"
}

pricecharting {
    token = "{{pricechartingToken}}"
}